<!doctype html>
<html>
  <head>
    <title>Magnet-izer</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Quantico" rel="stylesheet">
    <link href="/public/css/post-wall.css" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand active" href="/">Magnet-izer</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <% if (user) { %>
              <li><a href="/my-post-wall">My Magnets</a></li>
            <% } %>
            <li><a href="/all-post-wall">All Magnets</a></li>
            <% if (user && user[1] === 'local') { %>
              <li><a href="/password">Change Password</a></li>
            <% } %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if (user) { %>
              <li><div class="headerText">Welcome <%= user[0] %></div></li>
              <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
            <% } else { %>
              <li><a href="/signup"><span class="glyphicon glyphicon-pencil"></span> Sign up</a></li>
              <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="col-sm-6 col-sm-offset-3">
      <h1><span class="glyphicon glyphicon-folder-open"></span> Profile</h1>
      <% if (message.length > 0) { %>
          <div class="alert alert-info"><%= message %></div>
      <% } %>
      <div class="well">
        <h3><span class="fa fa-user"></span> Local</h3>
          <% if (reqUser.local.username) { %>
            <p>
              <strong>id</strong>: <%= reqUser._id %><br>
              <strong>username</strong>: <%= reqUser.local.username %>
            </p>
          <% } else { %>
            <a href="/add/local" class="btn btn-default">Add Local Account</a>
          <% } %>
      </div>
      <div class="well">
        <h3 class="text-info"><span class="fa fa-twitter"></span> Twitter</h3>
        <% if (reqUser.twitter.token) { %>
          <p>
            <strong>id</strong>: <%= reqUser.twitter.id %><br>
            <strong>username</strong>: <%= reqUser.twitter.username %><br>
            <strong>displayName</strong>: <%= reqUser.twitter.displayName %>
          </p>
          <% if (reqUser.local.username) { %>
            <a href="/unlink/twitter" class="btn btn-info">Unlink</a>
          <% } %>
        <% } else { %>
          <a href="/connect/twitter" class="btn btn-info">Connect Twitter</a>
        <% } %>
      </div>
    </div>
  </body>
</html>
